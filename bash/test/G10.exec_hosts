#!/bin/bash
# copy code to each server

cd `dirname $0`
source ./.G10.common


for host in ${OTHER_HOSTS_NOT_CHLD}
do
    echo -e "\n---------------------------------------"
    echo "exec $host $1 $2 $3 $4 $5 $6 $7 $8 $9"
    echo "---------------------------------------"
    ssh -p22 -t $host "cd $NDIR && $1 $2 $3 $4 $5 $6 $7 $8 $9"
done




